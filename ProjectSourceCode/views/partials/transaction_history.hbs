<div class="card" >
    <div class="card-body">
        <h5 class="card-title">Transaction History</h5>
        <div class="card-text">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Transaction</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Ending Balance</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each transactions}}
                        <tr>
                            <td>{{date}}</td>
                            <td>{{name}}</td>
                            <td>{{amount}}</td>
                            <td>{{balance}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
    </div>
</div>