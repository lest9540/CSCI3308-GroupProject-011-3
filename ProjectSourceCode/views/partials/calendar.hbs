<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    {{!-- Calendar Arrows--}}
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
        integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
    />

    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
        }

        #calendar {
            width: 300px;
            margin: 20px auto;
        }

        .monthTitle {
            margin-top: 50px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .days, .dates {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
        }

        .day, .date {
            padding: 10px;
            border: 1px solid #ccc;
        }

        .today {
            background-color: #007bff;
            color: white;
            border-radius: 50%;
        }

        .rightHalf {
            position: absolute;
            top: 0;
            left: 53%;
            width: 50%;
            height: 130vh;
            display: flex;
            justify-content: flex-start; 
            align-items: center; 
        }

        .menu {
            width: 750px;
            right: 50%;
            margin-top: 7vh;
            min-height: 550px;
            margin-left: 120px;
            color: #fff;
            display: flex;

            border-radius: 10px;
            background-color: #8b8e9b;
        }

        .date.selected {
            background-color: #a4c8ff;
            color: white;
            border-radius: 50%;
        }
        </style>
    </head>

    <body>
        <div class = "rightHalf"> {{!-- Shifts the calendar to be on the right side of the screen--}}
            <div id="calendar">
                {{!-- Display of the Month and Year --}}
                <div class="monthTitle">
                    {{!-- Note the fa fa-angle stuff is using the linked style for the arrows on the calendar  --}}
                    <i class = "fa fa-angle-left prev" onclick="changeMonth(-1)"></i> {{!-- Using calendar arrows --}}
                    <h2 id="monthYear"></h2>
                    <i class = "fa fa-angle-right next" onclick="changeMonth(1)"></i> {{!-- Using calendar arrows --}}
                </div>

                {{!-- Buttons for Today and Adding an Event (TEMP ! ! ! ! ! ! ! ! !) --}}
                <div>
                    <button onclick="todayBut()" class="btn btn-primary" style="margin-right: 250px; margin-bottom: 10px">Today</button>
                    {{!-- <button style="margin-left: 90px; margin-bottom: 10px;">Add Transaction</button> --}}
                </div>

                {{!-- For the Days of the week for calendar --}}
                <div class="days">
                    <div class="day">S</div><div class="day">M</div><div class="day">T</div>
                    <div class="day">W</div><div class="day">Th</div><div class="day">F</div>
                    <div class="day">Sa</div>
                </div>

                <div class="dates" id="dates"></div>
            </div>

            {{!-- Functions to get the current date and set the calendar up, etc. --}}
            <script>
                let currentDate = new Date();
                let selectedDay = null; // used for a selected date

                function renderCalendar(date) {
                    // Gets sets up the calendar for the month
                    const year = date.getFullYear();
                    const month = date.getMonth();
                    const firstDay = new Date(year, month, 1).getDay();
                    const lastDate = new Date(year, month + 1, 0).getDate();
                    const today = new Date();

                    document.getElementById("monthYear").innerText =
                    date.toLocaleString("default", { month: "long" }) + " " + year;

                    const datesEl = document.getElementById("dates");
                    datesEl.innerHTML = "";

                    // Add empty cells for days before the first of the month
                    for (let i = 0; i < firstDay; i++) {
                    datesEl.innerHTML += `<div class="date"></div>`;
                    }

                    // Add day numbers to the calendar (1, 2, 3, ...)
                    for (let day = 1; day <= lastDate; day++) {
                        const selectDay = new Date(year, month, day);

                        // Holds todays date
                        const isToday =
                            day === today.getDate() &&
                            month === today.getMonth() &&
                            year === today.getFullYear();
                        
                        // Holds the selected day the user clicks on
                        const isSelected =
                            selectedDay &&
                            day === selectedDay.getDate() &&
                            month === selectedDay.getMonth() &&
                            year === selectedDay.getFullYear();

                        // Settings to show the day selected
                        const dayDiv = document.createElement("div");
                        dayDiv.className = "date" + (isToday ? " today" : "") + (isSelected ? " selected" : ""); // changes to show the selected day variables used before
                        dayDiv.textContent = day; // makes sure that the day is still visible 

                        // For when the user clicks on a day on the calendar
                        dayDiv.addEventListener("click", () => {
                            selectedDay = selectDay;
                            renderCalendar(currentDate);
                            showSelectedDay();
                        });
                        datesEl.appendChild(dayDiv);
                    }
                }
                // Changes the corresponding day to match the first day of the month (if it starts on monday, tuesday, etc.)
                function changeMonth(offset) {
                    currentDate.setMonth(currentDate.getMonth() + offset);
                    renderCalendar(currentDate);
                }

                renderCalendar(currentDate);

                // Function that automatically selects todays date and shows transactions due "today"
                function todayBut(){
                    currentDate = new Date();
                    selectedDay = new Date();
                    renderCalendar(currentDate);
                    showSelectedDay();
                }

                // Changes the transactions due to match the date that the user has selected
                function showSelectedDay() {
                    const display = document.querySelector(".menu h3"); // heading from the transaction menu
                    if (selectedDay) {
                        const formatted = selectedDay.toLocaleDateString("default", {
                            weekday: 'long',
                            year: 'numeric',
                            month: 'long',
                            day: 'numeric'
                        });
                        display.textContent = formatted;
                    }
                }
            </script>
        </div>

        {{!-- Show Transactions Side --}}
        <div class="menu"> 
            <h3 style="margin-left: 20px; margin-top: 20px">Transactions Due</h3>
            <div><h3 style="margin-left: 10%; margin-top: 50%"> Nothing selected yet </h3></div> {{!-- Add way so this goes away when selecting a day--}}
            {{!-- Add implementation for showing the transactions due on that day --}}
        </div>

    </body>
</html>
